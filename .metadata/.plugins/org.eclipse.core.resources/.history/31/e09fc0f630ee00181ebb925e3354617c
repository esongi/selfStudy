package javaStudy.programmers;

import java.util.Arrays;

public class Solution4 {

	public int[] solution(int n, int m) {
		int[] answer = new int[2];
		answer[0] = 0;
		answer[1] = 0;

		if (n < m) {
			int[] temp = new int[n];

			for (int i = 1; i <= n; i++) {
				if (n % i == 0) {
					temp[i - 1] = i;
				}
			}

			for (int i = 1; i <= temp.length; i++) {
				if ((m % temp[n - i]) == 0) {
					answer[0] = temp[n - i];
					break;
				}
			}
			answer[1] = answer[0] * (n / answer[0]) * (m / answer[0]);
		} else {
			int[] temp = new int[m];

			for (int i = 1; i <= m; i++) {
				if (m % i == 0) {
					temp[i - 1] = i;
				}
			}

			for (int i = 1; i <= temp.length; i++) {
				if ((m % temp[n - i]) == 0) {
					answer[0] = temp[n - i];
					break;
				}
			}
			
			for (int i = 1; i <= temp.length; i++) {
				if ((n % temp[m - i]) == 0) {
					answer[0] = temp[m - i];
					break;
				}
			}
			answer[1] = answer[0] * (m / answer[0]) * (n / answer[0]);
		}
		System.out.println(Arrays.toString(answer));
		return answer;
	}

	public static void main(String[] args) {
		Solution4 solution4 = new Solution4();
		solution4.solution(2, 5);
	}
}
